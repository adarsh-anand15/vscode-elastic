{
    "name": "elasticsearch",
    "displayName": "Elasticsearch for VSCode",
    "description": "Elasticsearch client like Kibana console for vscode",
    "version": "1.0.1",
    "publisher": "Bar",
    "icon": "media/elastic.png",
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "node ./build/restSpecIndex.js && tsc -p ./",
        "watch": "tsc -watch -p ./",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "removeUnusedImports": "tslint --config tslint-imports.json --fix --project .",
        "deploy": "vsce publish --yarn"
    },
    "engines": {
        "vscode": "^1.66.0"
    },
    "galleryBanner": {
        "color": "#005571",
        "theme": "dark"
    },
    "categories": [
        "Other",
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "Elasticsearch",
        "Kibana",
        "Elastic",
        "Elastic client",
        "es"
    ],
    "bugs": {
        "url": "https://github.com/barnuri/vscode-elastic/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/barnuri/vscode-elastic.git"
    },
    "activationEvents": [
        "onLanguage:es",
        "onCommand:elasticsearch.execute",
        "onCommand:elasticsearch.setHost"
    ],
    "contributes": {
        "commands": [
            {
                "command": "elasticsearch.setHost",
                "title": "Elasticsearch: Set Host",
                "category": "ES"
            }
        ],
        "languages": [
            {
                "id": "es",
                "aliases": [
                    "ElasticSearch",
                    "es",
                    "elasticsearch"
                ],
                "extensions": [
                    "es"
                ],
                "configuration": "./grammar/es.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "es",
                "scopeName": "source.es",
                "path": "./grammar/es.tmLanguage"
            }
        ],
        "configuration": {
            "title": "Elasticsearch",
            "properties": {
                "elasticsearch.showResultAsDocument": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show result in a new json file, or show in default view"
                },
                "elasticsearch.host": {
                    "type": "string",
                    "default": "http://localhost:9200",
                    "description": "Elasticsearch Host"
                }
            }
        },
        "keybindings": [
            {
                "key": "ctrl+enter",
                "command": "elasticsearch.execute",
                "when": "editorTextFocus && resourceLangId == 'es'"
            },
            {
                "command": "elasticsearch.execute",
                "key": "alt+Enter",
                "when": "editorTextFocus && resourceLangId==es"
            }
        ]
    },
    "dependencies": {
        "axios": "^0.26.1",
        "copy-paste": "^1.3.0",
        "json-markup": "^1.1.3",
        "jsonc-parser": "^3.0.0",
        "mustache": "^4.2.0",
        "path": "^0.12.7",
        "routington": "^1.0.3",
        "semver-closest": "^0.1.2",
        "strip-json-comments": "^3.0.0"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.25",
        "@types/vscode": "^1.66.0",
        "del": "^6.0.0",
        "jsesc": "^3.0.2",
        "mocha": "^9.2.2",
        "prettier": "^2.6.2",
        "require-dir": "^1.2.0",
        "tslint": "^6.1.3",
        "tslint-etc": "^1.13.10",
        "typescript": "^4.6.3",
        "vsce": "^2.7.0"
    }
}
